@{ ViewData["Title"] = "Adicionar Cep"; }

<h1>Adicionar Cep</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="CodigoCep" class="control-label">Código Cep</label>
                <input id="CodigoCep" name="CodigoCep" class="form-control" />
            </div>
            <div class="form-group">
                <label for="Cidade" class="control-label">Cidade</label>
                <input id="Cidade" name="Cidade" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
